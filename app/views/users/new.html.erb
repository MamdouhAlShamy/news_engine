<h1>Register</h1>

<div>
	<% if flash[:status] == TRUE %>
		<p><%= flash[:alert] %></p>
	<% elsif flash[:status] == FALSE %>
		<% flash[:alert].each do |error| %>
			<p><%= error %>
		<% end %>
	<% end %>
</div>
<%= form_for @user do |user| %>
	<div>
		<%= user.label(:first_name, "First Name") %>
		<%= user.text_field :first_name %>
	</div>
	<div>
		<%= user.label(:last_name, "Last Name")%>
		<%= user.text_field :last_name %>
	</div>
	<div>
		<%= user.label(:password, "Password") %>
		<%= user.password_field :password %>
	</div>
	<p>password must be more than 6 characters</p>
	<div>
		<%= user.label(:mobile_no, "Mobile Number") %>
		<%= user.text_field :mobile_no %>
	</div>
	<div>
		<%= user.label(:email, "Email") %>
		<%= user.text_field :email %>
	</div>
	<div>
		<%= submit_tag "Register" %>
	</div>
	
	
<% end %>
